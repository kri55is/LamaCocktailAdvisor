<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_name_edit_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_cocktail_edit_text"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_item_name_edit_text"
        android:layout_toEndOf="@+id/list_item_name_edit_text"
        android:text="Cocktail" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_rating_rating_bar"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_item_cocktail_edit_text"
        android:layout_toEndOf="@+id/list_item_cocktail_edit_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_date_edit_text"
        android:layout_below="@+id/list_item_rating_rating_bar"
        android:layout_alignLeft="@+id/list_item_rating_rating_bar"
        android:layout_alignStart="@+id/list_item_rating_rating_bar"
        android:text="Date" />
</RelativeLayout>